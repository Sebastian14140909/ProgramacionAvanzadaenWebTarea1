@model List<ReservationViewModel>
@{
    ViewData["Title"] = "Reservations";
}
<h1>Reservations</h1>
<a asp-action="Create" class="btn btn-primary">Nueva Reserva</a>
<table class="table">
    <thead>
        <tr>
            <th>Paciente</th>
            <th>Fecha</th>
            <th>Médico</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Patient</td>
                <td>@reservation.Date.ToString()</td>
                <td>@reservation.Doctor</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@reservation.Id" class="btn btn-warning btn-sm">
                        Editar
                    </a>

                    <a asp-action="Delete" asp-route-id="@reservation.Id" class="btn btn-danger btn-sm">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
